<h3><%= flash[:notice] %></h3>

<h2>Login</h2>
<%= form_for(:user) do |f| %>

    <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Login"%>
  </div>
<% end %>


<%= link_to "Forget your password?" ,:controller=>"account",:action=>"forget_password" %>